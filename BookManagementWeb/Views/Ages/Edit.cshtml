@model BookManagementLib.BusinessObject.Age

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout"+TempData.Peek("role")+".cshtml";
}

<h1>Edit</h1>

<h4>Age</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ForAgesId" class="control-label"></label>
                <input asp-for="ForAgesId" class="form-control" readonly/>
                <span asp-validation-for="ForAgesId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@{
    if (ViewBag.Message != null)
    {
        <script>
        window.onload = function () { alert("@ViewBag.Message") }
        </script>
    }
}